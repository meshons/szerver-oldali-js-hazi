<%- include('header', {title: "BEER.Logger my beers"}); %>
<div class="container">
    <div class="row justify-content-center">
        <div class="mt-5 app-login pb-4">
            <h3 class="mt-3 text-center">Welcome <%= user %>!</h3>
            <a href="/beer/add"><button type="button" class="btn btn-primary btn-lg btn-block">Add beer!</button></a>
            <h5>Your list of drunken beers:</h5>
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr class="text-center">
                    <th scope="col">when</th>
                    <th scope="col">where</th>
                    <th scope="col">what</th>
                    <th scope="col">liter</th>
                    <th scope="col">actions</th>
                </tr>
                </thead>
                <tbody>
                <% beers.forEach(function(beer){ %>
                    <tr>
                        <th scope="row"><%= beer.when %></th>
                        <td><%= beer.where %></td>
                        <td><%= beer.what %></td>
                        <td><%= beer.liter %> liter</td>
                        <td>
                            <a href="/beer/modify/<%= beer.id %>"><button type="button" class="btn btn-primary">show</button></a>
                            <a href="/beer/modify/<%= beer.id %>"><button type="button" class="btn btn-dark">modify</button></a>
                            <a href="/beer/remove/<%= beer.id %>"><button type="button" class="btn btn-danger">remove</button></a>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('footer'); %>
