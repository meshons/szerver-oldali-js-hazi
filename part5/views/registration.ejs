<%- include('header', {title: "BEER.Logger registration"}); %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto mt-5 app-login pb-4">
            <h1 class="app-title">BEER.logger</h1>
            <form method="post" action="/registration">
                <% if (typeof usernameEmpty != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Username can't be empty
                    </div>
                <% } %>
                <% if (typeof usernameEmpty == 'undefined' && typeof usernameExists != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Username has already taken
                    </div>
                <% } %>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" name="username" id="username" aria-describedby="emailHelp"
                           placeholder="Enter username" required>
                </div>
                <% if (typeof passwordEmpty != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Password can't be empty
                    </div>
                <% } %>
                <% if (typeof passwordEmpty == 'undefined' && typeof passwordShort != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Password too short, at least 8 characters
                    </div>
                <% } %>
                <% if (typeof passwordNoMatch != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Passwords should match
                    </div>
                <% } %>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                           required>
                </div>
                <% if (typeof rePasswordEmpty != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Password can't be empty
                    </div>
                <% } %>
                <% if (typeof rePasswordEmpty == 'undefined' && typeof rePasswordShort != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Password too short, at least 8 characters
                    </div>
                <% } %>
                <div class="form-group">
                    <label for="re-password">Password</label>
                    <input type="password" class="form-control" name="re-password" id="re-password"
                           placeholder="Password again" required>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Registration</button>
                <a href="login">
                    <button type="button" class="mt-3 btn btn-light btn-lg btn-block">Cancel</button>
                </a>
            </form>
        </div>
    </div>
</div>
<%- include('footer'); %>
