<%- include('../header', {title: "BEER.Logger modify"}); %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto mt-5 app-login pb-4">
            <h3 class="mt-3 text-center">Add a beer! But don't lie about it.</h3>
            <form method="post" action="/beer/modify/<%= beer.id %>">
                <h4>You drunk that at <%= beer.when %>.</h4>
                <div class="form-group">
                    <label for="where">Where?</label>
                    <input type="text" class="form-control" id="where" placeholder="Enter the name of the place" value="<%= beer.where %>" required>
                </div>
                <div class="form-group">
                    <label for="what">What?</label>
                    <input type="text" class="form-control" id="what" placeholder="Enter type of beer it was" value="<%= beer.what %>" required>
                </div>
                <div class="form-group">
                    <label for="liter">How many liter?</label>
                    <input type="number" class="form-control" id="liter" placeholder="Under half liter it was'nt a beer" value="<%= beer.liter %>" required>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Modify this beer!!</button>
                <a href="/beers"><button type="button" class="mt-3 btn btn-light btn-lg btn-block">Cancel</button></a>
            </form>
        </div>
    </div>
</div>
<%- include('../footer'); %>
