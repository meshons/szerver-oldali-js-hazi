<%- include('../header', {title: "BEER.Logger add"}); %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto mt-5 app-login pb-4">
            <h3 class="mt-3 text-center">Add a beer! But don't lie about it.</h3>
            <form method="post" action="/beer/add">
                <% if (typeof placeEmpty != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Place can't be empty
                    </div>
                <% } %>
                <div class="form-group">
                    <label for="where">Where?</label>
                    <input type="text" name="where" class="form-control" id="where"
                           placeholder="Enter the name of the place" required>
                </div>
                <% if (typeof beerEmpty != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Beer can't be empty
                    </div>
                <% } %>
                <div class="form-group">
                    <label for="what">What?</label>
                    <input type="text" name="what" class="form-control" id="what"
                           placeholder="Enter type of beer it was" required>
                </div>
                <% if (typeof literEmpty != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Liter can't be empty
                    </div>
                <% } %>
                <% if (typeof literEmpty == 'undefined' && typeof literIsNotFloat != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        Liter is not float
                    </div>
                <% } %>
                <div class="form-group">
                    <label for="liter">How many liter?</label>
                    <input type="number" name="liter" class="form-control" id="liter" step="0.1"
                           placeholder="Under half liter it was'nt a beer" required>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Add a beer!!</button>
                <a href="/beers">
                    <button type="button" class="mt-3 btn btn-light btn-lg btn-block">Cancel</button>
                </a>
            </form>
        </div>
    </div>
</div>
<%- include('../footer'); %>
